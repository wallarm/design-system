{
  "name": "wallarm-design-system",
  "version": "0.1.0",
  "description": "A comprehensive design system and component library for Wallarm",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wallarm/design-system.git"
  },
  "license": "MIT",
  "author": "Wallarm",
  "scripts": {
    "build": "turbo run build",
    "build:configs": "pnpm --filter=\"./packages/configs/*\" build",
    "dev": "turbo run dev",
    "design-system:dev": "pnpm --filter=@wallarm-org/design-system dev",
    "storybook": "turbo run storybook",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:ui": "turbo run test:ui",
    "test:coverage": "turbo run test:coverage",
    "test:run": "turbo run test:run",
    "e2e": "turbo run e2e",
    "e2e:ui": "turbo run e2e:ui",
    "e2e:report": "turbo run e2e:report",
    "e2e:docker:report": "echo 'ðŸ“Š Starting Docker E2E reports on port 9323 (Design System)' && turbo run e2e:docker:report",
    "e2e:docker:report:design-system": "pnpm --filter=@wallarm-org/design-system e2e:docker:report",
    "e2e:local": "./scripts/e2e-docker.sh",
    "e2e:local:design-system": "./scripts/e2e-docker.sh design-system",
    "e2e:docker": "./scripts/e2e-docker.sh --docker",
    "e2e:docker:design-system": "./scripts/e2e-docker.sh --docker design-system",
    "e2e:docker:update": "./scripts/e2e-docker.sh --docker --update",
    "e2e:docker:update:design-system": "./scripts/e2e-docker.sh --docker --update design-system",
    "e2e:failed": "./scripts/e2e-docker.sh --failed",
    "e2e:failed:design-system": "./scripts/e2e-docker.sh --failed design-system",
    "e2e:docker:failed": "./scripts/e2e-docker.sh --docker --failed",
    "e2e:docker:failed:design-system": "./scripts/e2e-docker.sh --docker --failed design-system",
    "ci:design-system": "pnpm --filter=@wallarm-org/design-system typecheck && pnpm --filter=@wallarm-org/design-system lint && pnpm --filter=@wallarm-org/design-system test:run && pnpm --filter=@wallarm-org/design-system build-storybook && pnpm --filter=@wallarm-org/design-system e2e",
    "ci:local": "pnpm build:configs && pnpm ci:design-system",
    "clean": "pnpm -r exec rm -rf node_modules dist coverage .turbo test-results playwright-report test-results storybook-static && rm -rf node_modules .turbo",
    "commit": "cz",
    "semantic-release": "semantic-release",
    "semantic-release:dry-run": "semantic-release --dry-run",
    "list-rc": "tsx scripts/list-rc-versions.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@playwright/test": "catalog:",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.2",
    "@semantic-release/npm": "13.1.3",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@types/node": "catalog:",
    "chalk": "5.6.2",
    "commitizen": "4.3.1",
    "conventional-changelog-conventionalcommits": "9.0.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "semantic-release": "25.0.2",
    "tsx": "^4.21.0",
    "turbo": "2.7.6",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=24"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "maxHeaderWidth": 100,
      "maxLineWidth": 100,
      "defaultType": "feat",
      "defaultScope": "",
      "defaultSubject": "",
      "defaultBody": "",
      "types": {
        "feat": {
          "description": "A new feature",
          "title": "Features"
        },
        "fix": {
          "description": "A bug fix",
          "title": "Bug Fixes"
        },
        "docs": {
          "description": "Documentation only changes",
          "title": "Documentation"
        },
        "style": {
          "description": "Changes that do not affect the meaning of the code",
          "title": "Styles"
        },
        "refactor": {
          "description": "A code change that neither fixes a bug nor adds a feature",
          "title": "Code Refactoring"
        },
        "perf": {
          "description": "A code change that improves performance",
          "title": "Performance Improvements"
        },
        "test": {
          "description": "Adding missing tests or correcting existing tests",
          "title": "Tests"
        },
        "build": {
          "description": "Changes that affect the build system or external dependencies",
          "title": "Build System"
        },
        "ci": {
          "description": "Changes to our CI configuration files and scripts",
          "title": "Continuous Integration"
        },
        "chore": {
          "description": "Other changes that don't modify src or test files",
          "title": "Chores"
        },
        "revert": {
          "description": "Reverts a previous commit",
          "title": "Reverts"
        }
      }
    }
  }
}

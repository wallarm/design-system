{
  "name": "@wallarm-org/playground",
  "version": "0.1.0",
  "description": "Playground application for testing and demonstrating Wallarm design system components",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wallarm/design-system.git",
    "directory": "apps/playground"
  },
  "license": "MIT",
  "author": "Wallarm",
  "type": "module",
  "scripts": {
    "build": "rsbuild build",
    "build:doctor": "RSDOCTOR=true rsbuild build",
    "dev": "rsbuild dev --port 3000",
    "format": "biome format --write .",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "preview": "rsbuild preview",
    "typecheck": "tsc --build --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:failed": "playwright test --last-failed",
    "e2e:failed:headed": "playwright test --last-failed --headed",
    "e2e:report": "playwright show-report",
    "e2e:docker": "playwright test --config=playwright.config.docker.ts",
    "e2e:docker:ui": "playwright test --config=playwright.config.docker.ts --ui",
    "e2e:docker:failed": "playwright test --config=playwright.config.docker.ts --last-failed",
    "e2e:docker:report": "playwright show-report ./playwright-report --port=9324"
  },
  "dependencies": {
    "@tanstack/react-router": "1.157.16",
    "@tanstack/router-devtools": "1.157.16",
    "@wallarm-org/design-system": "workspace:*",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwindcss": "catalog:",
    "tw-animate-css": "catalog:",
    "non.geist": "catalog:"
  },
  "devDependencies": {
    "@rsbuild/core": "catalog:",
    "@tanstack/router-plugin": "1.157.16",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@wallarm-org/playwright-config": "workspace:*",
    "@wallarm-org/rsbuild-config": "workspace:*",
    "@wallarm-org/tailwind-config": "workspace:*",
    "@wallarm-org/typescript-config": "workspace:*",
    "@wallarm-org/vitest-config": "workspace:*",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}

{
  "name": "@wallarm-org/design-system",
  "version": "0.3.0",
  "description": "Core design system library with React components and Storybook documentation",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wallarm/design-system.git",
    "directory": "packages/design-system"
  },
  "license": "MIT",
  "author": "Wallarm",
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "development": "./src/components/index.ts",
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.js",
      "default": "./dist/components/index.js"
    },
    "./icons": {
      "development": "./src/icons/index.ts",
      "types": "./dist/icons/index.d.ts",
      "import": "./dist/icons/index.js",
      "require": "./dist/icons/index.js",
      "default": "./dist/icons/index.js"
    },
    "./theme": {
      "development": "./src/theme/index.css",
      "import": "./dist/theme/index.css",
      "require": "./dist/theme/index.css",
      "default": "./dist/theme/index.css"
    },
    "./metadata": {
      "import": "./dist/metadata/components.json",
      "require": "./dist/metadata/components.json",
      "default": "./dist/metadata/components.json"
    },
    "./lib/*": {
      "development": "./src/lib/*.ts",
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js",
      "require": "./dist/lib/*.js",
      "default": "./dist/lib/*.js"
    },
    "./*": {
      "development": "./src/components/*/index.ts",
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.js",
      "require": "./dist/components/*/index.js",
      "default": "./dist/components/*/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "main": "dist/components/index.js",
  "module": "dist/components/index.js",
  "types": "dist/components/index.d.ts",
  "scripts": {
    "build": "rslib build && pnpm generate-metadata",
    "generate-metadata": "tsx scripts/metadata/generate.ts",
    "build:watch": "rslib build --watch",
    "prepublishOnly": "prepare-publish",
    "postpublish": "restore-package",
    "generate-exports": "tsx scripts/generate-exports.ts",
    "publish:local": "pnpm build && yalc publish --push",
    "lint": "biome check",
    "lint:fix": "biome check --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "storybook": "storybook dev --no-open -p 6006",
    "build-storybook": "storybook build",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:failed": "playwright test --last-failed",
    "e2e:failed:headed": "playwright test --last-failed --headed",
    "e2e:report": "playwright show-report",
    "e2e:docker": "playwright test --config=playwright.config.docker.ts",
    "e2e:docker:ui": "playwright test --config=playwright.config.docker.ts --ui",
    "e2e:docker:failed": "playwright test --config=playwright.config.docker.ts --last-failed",
    "e2e:docker:report": "playwright show-report ./playwright-report --port=9323"
  },
  "devDependencies": {
    "@figma/code-connect": "1.3.12",
    "@rsbuild/core": "catalog:",
    "@rsbuild/plugin-react": "catalog:",
    "@rslib/core": "catalog:",
    "@shikijs/types": "^3.22.0",
    "@storybook/addon-docs": "10.2.0",
    "@storybook/addon-mcp": "0.2.2",
    "@storybook/addon-themes": "10.2.0",
    "@storybook/mcp": "0.2.1",
    "@tailwindcss/postcss": "4.1.18",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/lodash-es": "4.17.12",
    "@types/node": "catalog:",
    "@types/prismjs": "^1.26.5",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@wallarm-org/playwright-config": "workspace:*",
    "@wallarm-org/publish-scripts": "workspace:*",
    "@wallarm-org/rsbuild-config": "workspace:*",
    "@wallarm-org/tailwind-config": "workspace:*",
    "@wallarm-org/typescript-config": "workspace:*",
    "@wallarm-org/vitest-config": "workspace:*",
    "glob": "^13.0.0",
    "@wallarm-org/mcp-core": "workspace:*",
    "ts-morph": "^25.0.0",
    "lodash-es": "4.17.23",
    "non.geist": "catalog:",
    "postcss": "8.5.6",
    "postcss-import": "16.1.1",
    "storybook": "catalog:",
    "storybook-react-rsbuild": "3.2.2",
    "tailwindcss": "catalog:",
    "tsx": "^4.21.0",
    "tw-animate-css": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@ark-ui/react": "5.30.0",
    "@dnd-kit/core": "6.3.1",
    "@dnd-kit/sortable": "10.0.0",
    "@dnd-kit/utilities": "3.2.2",
    "@radix-ui/react-slot": "1.2.4",
    "@tanstack/react-table": "8.21.3",
    "@tanstack/react-virtual": "3.13.18",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "highlight.js": "^11.11.1",
    "prism-react-renderer": "^2.4.1",
    "prismjs": "^1.30.0",
    "shiki": "^3.22.0",
    "tailwind-merge": "3.4.0"
  },
  "peerDependencies": {
    "non.geist": "^2.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0",
    "tw-animate-css": "^1.0.0"
  }
}
